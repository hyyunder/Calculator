<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:text=""
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/textRes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="30dp"
        android:text="=="
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />
    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="5"
        android:rowCount="9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRes"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp">

        <Button
            android:id="@+id/buttonSin"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="sin" />
        <Button
            android:id="@+id/buttonCos"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="cos" />

        <Button
            android:id="@+id/buttonTan"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="tan" />

        <Button
            android:id="@+id/buttonLog"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="log" />

        <Button
            android:id="@+id/buttonX"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="x!" />

        <Button
            android:id="@+id/buttonPin"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="²" />
        <Button
            android:id="@+id/buttonLi"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="³" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="80dp"
            android:text="CLEAR" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="80dp"
            android:text="Back" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="+" />

        <Button
            android:id="@+id/buttonE"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="e" />

        <Button
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:text="3" />

        <Button
            android:id="@+id/buttonSub"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="-" />

        <Button
            android:id="@+id/buttonBai"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="%" />

        <Button
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:text="6" />

        <Button
            android:id="@+id/buttonMul"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="×" />

        <Button
            android:id="@+id/buttonFen"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="1/x" />

        <Button
            android:id="@+id/button7"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:text="9" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="÷" />

        <Button
            android:id="@+id/buttonLeft"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="(" />
        <Button
            android:id="@+id/buttonRight"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text=")" />

        <Button
            android:id="@+id/button0"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:text="0" />

        <Button
            android:id="@+id/buttonPoint"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="." />

        <Button
            android:id="@+id/buttonRes"
            android:layout_width="80dp"
            android:text="=" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>